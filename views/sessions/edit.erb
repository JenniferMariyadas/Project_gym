<h2>Edit <%= @session.format_name %></h2>
<form method="POST" action="/sessions/<%= @session.id %>">
  <input type ="hidden" name="_method" value= "put">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="session_name">Session Name:</label>
      <input type="text" name="session_name" id="session_name" value="<%= @session.session_name %>"/>
    </div>

    <div class="form-el">
      <label for="type">type:</label>
      <input type="text" name="type" id="type" value="<%= @session.type%>"/>
    </div>

    <div class="form-el">
      <label for="start_time">time:</label>
      <input type="datetime" name="start_time" id="start_time" value="<%= @session.start_time %>"/>
    </div>

    <div class="form-el">
      <input type="submit" value="Edit Session"/>
    </div>

  </div>
</form>
